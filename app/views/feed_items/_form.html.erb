<%= form_with(model: [@user, feed_item]) do |form| %>
  <% if feed_item.errors.any? %>
    <div class="error-messages" style="color: red">
      <h2><%= pluralize(feed_item.errors.count, "error") %> prohibited this feed item from being saved:</h2>

      <ul>
        <% feed_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :likes, style: "display: block" %>
    <%= form.number_field :likes, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>