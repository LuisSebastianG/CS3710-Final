<p id="notice"><%= notice %></p>

<h1>Feed Items</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Posted On</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.feed_items.each do |feed_item| %>
      <tr>
        <!-- Feed item body -->
        <td><%= feed_item.body %></td>

        <!-- Associated user name -->
        <td><%= feed_item.created_at %></td>

        <!-- Links for actions -->
        <td><%= link_to 'Edit Post', edit_user_feed_item_path(@user, feed_item) %></td>
        <td><%= button_to 'Delete Post', [@user, feed_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to Profile', [@user] %>
<%= link_to 'New Post', new_user_feed_item_path(@user) %>
