<p style="color: green"><%= notice %></p>

<div class="header">
  <div class="auth-links">
    <%= form_with url: destroy_user_session_path, method: :delete, local: true do %>
      <%= hidden_field_tag :user_id, @user_id %>
      <%= submit_tag 'Sign Out', class: 'sign-out-link' %>
    <% end %>
  </div>
</div>

<%= render @user %>

<div class="profile-actions">
  <%= link_to "Edit Profile", edit_user_path(@user), class: 'profile-link' %>
</div>

<h2>Posts</h2>
<div class="feed">
  <% @user.feed_items.each do |post| %>
    <div class="feed-item">
      <p><%= post.body %></p>
    </div>
  <% end %>
</div>

<div class="actions">
  <%= link_to "New Post", user_feed_items_path(@user), class: 'action-link' %>
  <%= link_to "Back to For You", root_path, class: 'action-link' %>
  <%= button_to "Delete this user", @user, method: :delete, class: 'delete-button' %>
</div>